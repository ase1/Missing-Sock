<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/PurpleActionBar</item>
    </style>


    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
        parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/PurpleActionBar</item>
        <item name="floatingActionButtonStyle">@style/AppTheme.Fab</item>
    </style>

    <!-- ActionBar styles -->
    <style name="PurpleActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">#9000ff</item>
    </style>

    <style name="AppTheme.Fab" parent="FloatingActionButton">
        <item name="floatingActionButtonColor">#9000ff</item>
    </style>
</resources>
