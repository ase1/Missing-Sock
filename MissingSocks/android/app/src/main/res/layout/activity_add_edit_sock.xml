<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.aelsey.missingsocks.profile"
    android:weightSum="2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Add/Edit Sock"
        android:gravity="center"
        android:id="@+id/addeditsock"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/date"
        android:layout_below="@+id/addeditsock"
        android:layout_marginTop="40dp"
        android:layout_alignRight="@+id/universities"
        android:layout_alignEnd="@+id/universities"
        android:hint="Date"
        android:layout_toRightOf="@+id/imageButton"
        android:layout_toEndOf="@+id/imageButton" />

    <Spinner
        android:id="@+id/universities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/universities"
        android:prompt="@string/university"
        android:layout_below="@+id/date"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/cancel_button"
        android:layout_toRightOf="@+id/cancel_button" />

    <Spinner
        android:id="@+id/laundryrooms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/laundryroomtest"
        android:prompt="@string/laundryrooms"
        android:layout_below="@+id/universities"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/universities"
        android:layout_alignStart="@+id/universities" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="@string/gender_label"
        android:id="@+id/gender_label"
        android:gravity="center_vertical"
        android:layout_below="@+id/style_dropdown"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/description" />

    <Spinner
        android:id="@+id/gender_dropdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/sockgender"
        android:prompt="@string/gender_label"
        android:layout_below="@+id/style_dropdown"
        android:layout_alignRight="@+id/update_button"
        android:layout_alignEnd="@+id/update_button"
        android:layout_toRightOf="@+id/description"
        android:layout_toEndOf="@+id/description" />

    <Spinner
        android:id="@+id/style_dropdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/styles"
        android:prompt="@string/style_label"
        android:layout_below="@+id/radiogroup"
        android:layout_alignRight="@+id/update_button"
        android:layout_alignEnd="@+id/update_button"
        android:layout_toEndOf="@+id/gender_label"
        android:layout_toRightOf="@+id/gender_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="@string/style_label"
        android:id="@+id/style_label"
        android:gravity="center_vertical"
        android:layout_below="@+id/radiogroup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/style_dropdown" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lostfound"
        android:textOn="Lost"
        android:textOff="Found"
        android:layout_below="@+id/addeditsock"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="@string/description"
        android:id="@+id/description"
        android:gravity="center_vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/descriptiontext"
        android:layout_alignBottom="@+id/descriptiontext"
        android:layout_toLeftOf="@+id/descriptiontext"
        android:layout_below="@+id/gender_dropdown" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/descriptiontext"
        android:layout_below="@+id/gender_dropdown"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/gender_label"
        android:layout_toEndOf="@+id/gender_label" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/universities"
        android:src="@drawable/insert_pic_icon"
        android:layout_alignTop="@+id/date"
        android:layout_alignRight="@+id/gray"
        android:layout_alignEnd="@+id/gray" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/cancel_button"
        android:layout_alignTop="@+id/update_button"
        android:layout_alignLeft="@+id/yellow"
        android:layout_alignStart="@+id/yellow" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/update_button"
        android:onClick="testClick"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/descriptiontext"
        android:layout_alignEnd="@+id/descriptiontext" />

    <RadioGroup

        android:id="@+id/radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/laundryrooms"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

    <RadioButton
        android:layout_width="40sp"
        android:layout_height="wrap_content"
        android:id="@+id/yellow"
        android:background="#fffffb23"
        android:layout_alignTop="@+id/pink"
        android:layout_toRightOf="@+id/gray"
        android:layout_toEndOf="@+id/gray" />

    <RadioButton
        android:layout_width="40sp"
        android:layout_height="wrap_content"
        android:id="@+id/brown"
        android:background="#ff9a5512"
        android:layout_alignTop="@+id/yellow"
        android:layout_toLeftOf="@+id/gray"
        android:layout_toStartOf="@+id/gray" />

    <RadioButton
        android:layout_width="40sp"
        android:layout_height="wrap_content"
        android:id="@+id/gray"
        android:background="#ff808080"
        android:layout_alignTop="@+id/yellow"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:layout_width="40sp"
        android:layout_height="wrap_content"
        android:id="@+id/beige"
        android:background="#ffffd9a8"
        android:layout_alignTop="@+id/brown"
        android:layout_toLeftOf="@+id/brown"
        android:layout_toStartOf="@+id/brown" />

    <RadioButton
    android:layout_width="40sp"
    android:layout_height="wrap_content"
    android:id="@+id/blue"
    android:background="#ff053bff" />


    <RadioButton
    android:layout_width="40sp"
    android:layout_height="wrap_content"
    android:id="@+id/white"
    android:background="#ffffffff"
    android:layout_alignTop="@+id/black"
    android:layout_toLeftOf="@+id/black"
    android:layout_toStartOf="@+id/black" />

    <RadioButton
    android:layout_width="40sp"
    android:layout_height="wrap_content"
    android:id="@+id/black"
    android:background="#ff000000"
    android:layout_alignTop="@+id/beige"
    android:layout_toLeftOf="@+id/beige"
    android:layout_toStartOf="@+id/beige" />

    <RadioButton
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:id="@+id/multicolored_other"
    android:background="#ffffff"
    android:text="Multi/Other"
    android:textSize="10dp"
    android:layout_alignTop="@+id/black"
    android:layout_toLeftOf="@+id/black"
    android:layout_toStartOf="@+id/black" />

    </RadioGroup>
</RelativeLayout>
