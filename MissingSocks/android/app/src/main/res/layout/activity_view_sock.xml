<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.aelsey.missingsocks.profile"
    android:weightSum="2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="View Sock"
        android:gravity="center"
        android:id="@+id/addeditsock"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/date"
        android:layout_marginTop="25dp"
        android:text="Sample Date"
        android:layout_below="@+id/addeditsock"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/universities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sample University"
        android:textSize="16dp"
        android:layout_below="@+id/date"
        android:layout_alignLeft="@+id/laundryrooms"
        android:layout_alignStart="@+id/laundryrooms" />

    <TextView
        android:id="@+id/laundryrooms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sample Laundry Room"
        android:layout_below="@+id/universities"
        android:layout_alignLeft="@+id/date"
        android:layout_alignStart="@+id/date"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sample Color"
        android:background="#ff0000"
        android:layout_below="@+id/laundryrooms"
        android:layout_alignLeft="@+id/laundryrooms"
        android:layout_alignStart="@+id/laundryrooms"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sample Style"
        android:layout_below="@+id/gender"
        android:layout_alignRight="@+id/color"
        android:layout_alignEnd="@+id/color"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sample Sock Gender"
        android:layout_below="@+id/color"
        android:layout_alignLeft="@+id/style"
        android:layout_alignStart="@+id/style"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sample Description"
        android:layout_below="@+id/style"
        android:layout_alignLeft="@+id/style"
        android:layout_alignStart="@+id/style"
        android:textSize="16dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:layout_alignTop="@+id/date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/description"
        android:src="@drawable/socklogo"
        android:layout_toLeftOf="@+id/date"
        android:layout_toStartOf="@+id/date" />

    <TextView
        android:id="@+id/firstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bob"
        android:textSize="16dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bob@bob.com"
        android:textSize="16dp"
        android:layout_below="@+id/firstname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="999-999-9999"
        android:textSize="16dp"
        android:layout_below="@+id/email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/back_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="backtohome"/>
</RelativeLayout>
