<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.aelsey.missingsocks.profile">

    <AutoCompleteTextView android:id="@+id/firstname" android:layout_width="200sp"
        android:layout_height="wrap_content" android:hint="First Name"
        android:inputType="textEmailAddress" android:maxLines="1"
        android:singleLine="true"
        android:layout_marginTop="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/lastname"
        android:layout_alignStart="@+id/lastname" />

    <AutoCompleteTextView android:id="@+id/lastname" android:layout_width="200sp"
        android:layout_height="wrap_content" android:hint="Last Name"
        android:inputType="textEmailAddress" android:maxLines="1"
        android:singleLine="true"
        android:layout_below="@+id/firstname"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:id="@+id/universities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lastname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:entries="@array/universities"
        android:prompt="@string/university"/>

</RelativeLayout>
